<%- include('./shared/header.ejs', {title: 'Bienvenue', page: 'index'}); %>

<% if (locals.posts) { %>
    <h1 class="mt-3 mb-4 text-center">Bienvenue</h1>

        <div class="mb-5 d-flex justify-content-center">
            <div class="card w-50">
                <div class="card-body">
                    <form action="" method="post">
                        <div class="mb-2 w-50 m-2">
                            <label for="title">Titre</label>
                            <% if (locals.user) { %>
                                <input type="text" id="title" name="title" class="form-control">
                            <% } else { %>
                                <input type="text" id="title" name="title" class="form-control" disabled placeholder="Veuillez vous connecter">
                            <% } %>
                        </div>
                        <div class="mb-2 m-2">
                            <label for="content">Contenu</label>
                            <% if (locals.user) { %>
                                <textarea id="content" name="content" class="form-control"></textarea>
                            <% } else { %>
                                <textarea id="content" name="content" class="form-control" disabled placeholder="Veuillez vous connecter"></textarea>
                            <% } %>
                        </div>
                            <% if (locals.user) { %>
                                <button class="btn btn-primary mb-2 m-2">Ajouter l'article</button>
                            <% } else { %>
                                <button class="btn btn-primary mb-2 m-2" disabled>Ajouter l'article</button>
                            <% } %>
                    </form>
                </div>
            </div>
        </div>

    <div class="row row-cols-2">
        <% posts.forEach((post) => { %>
            <div class="col mb-3">
                <%- include('./shared/post', {post}) %>
            </div>
        <%}); %>        
    </div>
<% } %>

<%- include('./shared/footer.ejs'); %>
