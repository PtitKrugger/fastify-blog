<%- include('./shared/header.ejs', {title: 'Se connecter', page: 'login'}); %>

<div class="container">
    <% if (locals.error) { %>
        <div class="alert alert-danger mt-2">
            <%= error %>
        </div>
    <% } %>

    <h2 class="mt-3">Connexion</h2>
    <div class="card mt-3">
        <div class="card-body">
            <form action="" method="post">
                <div class="form-group mb-2">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" id="username" name="username" value="<%= locals.username ?? '' %>" class="form-control">
                </div>
                <div class="form-group mb-2">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
                <button class="mt-3 btn btn-primary">Se connecter</button>
            </form>            
        </div>
    </div>
</div>

<%- include('./shared/footer.ejs'); %>
